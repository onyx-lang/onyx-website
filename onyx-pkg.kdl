package {
    name "onyxlang-io" 
    author "Brendan Hansen" 
    url "https://onyxlang.io" 
    description "The onyxlang.io website" 
    version "0.0.1" 
}

config {
    dependency_source_path "./lib" 
    dependency_binary_path "./bin" 
}

dependencies {
    otmp "0.0.44" git="https://github.com/onyx-lang/pkg-otmp" 
    nimbus "0.0.13" git="http://github.com/brendanfh/nimbus" 
}

build {
    default {
        target "out.wasm" 
        runtime "onyx" 
        source "build.onyx" 
    }
    wasmer {
        target "site.wasm" 
        runtime "wasi" 
        source "build.onyx" 
        args "--multi-threaded" 
        define "WASIX" 
    }
}

lsp {
    mode "project" 
    source_files "build.onyx" 
    include_dirs "" 
    working_dir "." 
}

